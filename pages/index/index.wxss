.banners {
  width: 100%;
    height:300rpx
}
.banners image {
  height:100%;
  width: 100%
}

/*五个图标导航区域*/
.navContainer {
  display: flex;
  justify-content: space-around
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center
}

.iconfont {
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0
}
.navItem>text:last-child {
  font-size: 26rpx
}

.recommandContainer{
  padding:20rpx 
}
.recommandContainer .header {
  padding-bottom: 20rpx
}
.recommandContainer .header .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666
}

.recommandContainer .header .more{
  float: right;
  border: 1px solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx
}

  /* 内容区  */
.recommandScroll{
display: flex
}
.scrollitem {
  width: 200rpx;
  margin-right: 20rpx
}
.scrollitem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx
}

.scrollitem text {
    font-size: 26rpx;

  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp:2; 
  overflow: hidden;
  text-overflow: ellipsis
}
